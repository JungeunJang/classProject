<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.classproject.testServer.mapper.mapper_mssql">
    <select id="selectUserById" parameterType="int" resultType="com.classproject.testServer.model.testModel">
        select * from [dbo].[TestDB] where id=#{id}
    </select>
    <select id="selectUserList" resultType="com.classproject.testServer.model.testModel">
        select * from [dbo].[TestDB] order by id
    </select>
    <insert id="insertUser" parameterType="com.classproject.testServer.model.testModel" >
        insert into [dbo].[TestDB] values (#{id},#{name},#{info})
    </insert>
    <update id="updateUser" parameterType="com.classproject.testServer.model.testModel">
        update [dbo].[TestDB] set name=#{name},info=#{info} where id=#{id}
    </update>
    <delete id="deleteUser" parameterType="int" >
        delete from [dbo].[TestDB] where id =#{id}
    </delete>
</mapper>
